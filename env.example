# Application
NODE_ENV=development
APP_NAME=DriverOS
APP_VERSION=1.0.0
PORT=3000

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/driveros"
DATABASE_URL_TEST="postgresql://username:password@localhost:5432/driveros_test"

# Redis
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=

# Authentication
JWT_SECRET=your-super-secret-jwt-key-here
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Supabase (if using)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# External APIs
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
SENTRY_DSN=your-sentry-dsn

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=driveros-storage

# Monitoring
OTEL_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=driveros-backend

# Feature Flags
ENABLE_DUAL_OPS=true
ENABLE_RESLOTTING=true
ENABLE_REAL_TIME_UPDATES=true

# Simulation Settings
SIMULATION_SPEED=1
SIMULATION_SEED=12345
VESSEL_GENERATION_INTERVAL=172800000 # 2 days in milliseconds

# Security
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
RATE_LIMIT_WINDOW=900000 # 15 minutes
RATE_LIMIT_MAX=100 # requests per window

# Development
DEBUG=driveros:*
LOG_LEVEL=debug
