{
  "name": "driveros",
  "version": "1.0.0",
  "description": "DriverOS - Container Logistics Management System",
  "private": true,
  "scripts": {
    "dev": "pnpm --parallel --recursive run dev",
    "build": "pnpm --recursive run build",
    "test": "pnpm --recursive run test",
    "lint": "pnpm --recursive run lint",
    "typecheck": "pnpm --recursive run typecheck",
    "clean": "pnpm --recursive run clean",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "db:migrate": "pnpm --filter backend run db:migrate",
    "db:seed": "pnpm --filter backend run db:seed",
    "prepare": "husky"
  },
  "keywords": [
    "logistics",
    "container",
    "terminal",
    "driver",
    "dispatcher",
    "simulation"
  ],
  "author": "DriverOS Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5"
  }
}
